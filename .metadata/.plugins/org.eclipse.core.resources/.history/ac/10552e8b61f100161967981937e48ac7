package problems;

public class RotatedArray
{
	public static int findMin(int[] nums)
	{
		if (nums.length == 0)
			return -1;

		int low = 0, high = nums.length - 1;

		while (low < high)
		{
			if (nums[low] < nums[high])
				return nums[low];

			int mid = low + (high - low) / 2;

			if (mid < high && nums[mid + 1] < nums[mid])
				return nums[mid + 1];

			if ((mid > low) && (nums[mid] < nums[mid - 1]))
				return nums[mid];

			if (nums[low] <= nums[mid])
				low = mid + 1;

			else if (nums[mid] <= nums[high])
				high = mid - 1;
		}

		return nums[low];
	}

	static int find(int[] nums, int target)
	{
		if (nums == null || nums.length == 0)
			return -1;

		int low = 0, high = nums.length - 1;
		while (low <= high)
		{
			int mid = low + (high - low) / 2;
			if (nums[mid] == target)
				return mid;

			if (nums[low] <= nums[mid])
			{
				if (target >= nums[low] && target < nums[mid])
					high = mid - 1;
				else
					low = mid + 1;
			}
			else
			{
				if (target > nums[mid] && target <= nums[high])
					low = mid + 1;
				else
					high = mid - 1;
			}
		}
		return -1;
	}

	static int findWithDup(int[] nums, int x)
	{
		if (nums == null || nums.length == 0)
			return -1;

		int low = 0, high = nums.length - 1;
		while (low <= high)
		{
			int mid = low + (high - low) / 2;
			if (nums[mid] == x)
				return mid;

			/*
			 * Either the left or right half must be normally ordered. Find out
			 * which side is normally ordered, and then use the normally ordered
			 * half to figure out which side to search to find x.
			 */
			
			if (nums[low] < nums[mid]) // Left is normally ordered.
			{
				if (x >= nums[low] && x < nums[mid])
					high = mid - 1; // Search left
				else
					low = mid + 1; // Search right
			}
			else if (nums[mid] < nums[low]) // Right is normally ordered.
			{
				if (x > nums[mid] && x <= nums[high])
				{
					return search(nums, mid + 1, high, x); // Search right
				}
				else
				{
					return search(nums, low, mid - 1, x); // Search left
				}
			}
			else if (nums[low] == nums[mid])
			{// Left or right half is all repeats
				if (nums[mid] != nums[high])
				{// If right is different, search it
					return search(nums, mid + 1, high, x); // search right
				}
				else
				{// Else, we have to search both halves
					int result = search(nums, low, mid - 1, x); // Search left
					if (result == -1)
					{
						return search(nums, mid + 1, high, x); // Search right
					}
					else
					{
						return result;
					}
				}
			}
			return -1;
		}
	}

	public static void main(String[] args)
	{
		int[] nums = { 8, 1, 2, 4, 5, 6 };
		// int[] nums = { 7, 8, 8, 1, 2, 4, 5, 6, 7 };
		// int[] nums = { 7, 7, 7, 7, 7, 7, 7 };
		System.out.println(findMin(nums));

	}
}
