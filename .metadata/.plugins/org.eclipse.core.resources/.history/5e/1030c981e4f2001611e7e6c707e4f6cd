package problems;

public class MagicIndex
{
	static int i = 1;
	static int magicIndex(int[] a, int low, int high)
	{
		System.out.println(i++ + ": " + low + " " + high);
		if (low < high)
			return -1;

		int mid = low + (high - low) / 2;
		if (a[mid] == mid)
			return mid;

		int lIndex = magicIndex(a, low, Math.min(a[mid], mid - 1));
		if (lIndex >= 0)
			return lIndex;

		int rIndex = magicIndex(a, low, Math.max(a[mid], mid + 1));
		return rIndex;
	}

	static int magicIndex(int[] a)
	{
		return magicIndex(a, 0, a.length - 1);
	}

	public static void main(String[] args)
	{
		int a[] = { -1, 0, 1, 2, 3, 4, 5, 6 };
		System.out.println(magicIndex(a));
	}
}
